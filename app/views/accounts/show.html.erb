<div align="center">
  <h1><%= @account.name %></h1>
  <p><%= link_to "Add a domain", new_domain_path(account_id: @account.id) %></p>

  <div class="row">
    <div>
      <% @domains.each do |domain| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to domain.hostname, domain.hostname %>
              <%= link_to "Edit", edit_domain_path(domain) %> | <%= link_to "Delete", domain, method: :delete, data: { confirm: 'Are you sure you want to delete this domain?' } %>
            </h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <br>
  <p><%= link_to "Edit account", edit_account_path %> | <%= link_to "Delete account", @account, method: :delete, data: { confirm: 'Are you sure you want to delete this account?' } %> </p>

  <p><%= link_to "Home", root_path %></p>
</div>