<div align="center">
  <h1><%= @account.name %></h1>

    <p><div class='new-domain'>
      <%= render 'domains/form' %>
    </div></p>
    <br>
    <div class='domain-list'>
      <% @domains.each do |domain| %>
        <%= render domain %>
      <% end %>
    </div>

  <br>
  <div>
    <p><%= link_to "Edit account", edit_account_path %> | <%= link_to "Delete account", @account, method: :delete, data: { confirm: 'Are you sure you want to delete this account?' } %> </p>

    <p><%= link_to "Home", root_path %></p>
  </div>
</div>
